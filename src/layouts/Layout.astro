---
import Header from '../components/Header.astro';

interface Props {
	title: string;
	header: {
		sticky?: boolean;
		transparent?: boolean;
	}
}

const { title, header = {} } = Astro.props;
const { sticky = true, transparent = false } = header;
---

<!doctype html>
<html lang="en" class="dark:bg-slate-950 bg-slate-100">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width, intial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Header sticky={sticky} transparent={transparent}></Header>
		<slot />
		<script src="https://kit.fontawesome.com/bf3278541d.js" crossorigin="anonymous"></script>
	</body>
</html>
