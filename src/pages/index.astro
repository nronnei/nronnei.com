---
import HeroLayout from '../layouts/HeroLayout.astro';

const modifiers = ["saturate-150", "contrast-125", "flex", "flex-col"];
const contentClasses = ["container", "px-4", "mx-auto", "flex-grow"].join(" ")
---

<HeroLayout title="Nick Ronnei" bgImageClass='bg-hero-pattern' modifiers={modifiers}>
    <div class={contentClasses}>
        <h1 class="text-5xl md:text-7xl font-bold text-white pt-28">Nick Ronnei</h1>
        <p class="text-white text-lg">Full Stack & Cloud Engineer, Aspiring Architect</p>
    </div>
    <div class={`${contentClasses} text-right`}>
        <h2 class="text-3xl md:text-4xl font-bold">Thanks for stopping by</h2>
        <p>Check out my blog, projects, or resume.</p>
    </div>
</HeroLayout>
